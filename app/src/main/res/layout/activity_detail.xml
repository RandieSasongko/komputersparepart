<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TambahActivity"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_detail_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_motherboard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama Sparepart"
                android:textSize="21sp"
                android:padding="8dp"
                android:fontFamily="@font/quicksand_bold"
                />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi Sparepart"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Kategori"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Kategori Sparepart"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Kapasitas"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

                <TextView
                    android:id="@+id/tv_kapasitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Kapasitas Sparepart"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Type Sparepart"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Type Sparepart"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/quicksand_regular"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>